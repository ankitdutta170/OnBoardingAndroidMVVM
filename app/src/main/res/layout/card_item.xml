<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        android:padding="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#fff"   android:elevation="4dp"
                    android:padding="16dp">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/cardViewImage"  android:layout_alignParentTop="true"
                       android:layout_marginRight="18dp" android:src="@drawable/profile"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                        android:orientation="vertical" android:layout_toRightOf="@id/cardViewImage"
        >


        <LinearLayout android:id="@+id/linear1"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <TextView android:id="@+id/name"
                    android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1"
                       android:paddingBottom="5dp"
                      android:text="Name" android:textSize="16sp"/>
            <TextView android:id="@+id/age"
                      android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:paddingBottom="5dp" android:layout_marginLeft="50dp"
                      android:text="Age" android:textSize="16sp"/>

        </LinearLayout>
        <LinearLayout android:id="@+id/linear2"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_below="@+id/linear1"

        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/email_Id"
                        android:paddingBottom="5dp" android:textSize="16sp"
                      android:text="email"/>

        </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal" android:layout_below="@+id/linear1">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/ph_no"
                          android:paddingBottom="5dp" android:textSize="16sp"
                          android:text="Ph No"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>